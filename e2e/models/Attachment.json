{
  "$attributes": {
    "findAll": ["label", "File.name", "File.path", "File.type", "File.size"]
  },
  "$uiSchema": {
    "ui:fields": ["label", "File"],
    "ui:add": false,
    "id": {
      "ui:hidden": true
    },
    "label": {
      "ui:template": "#{.FileId} {.File.kind} {this}"
    },
    "File":{
      "ui:template": "{@file:this}"
    },
    "FileId": {
      "ui:ref": "File",
      "ui:component": "FileUpload",
      "ui:template": "{@file:this}",
      "ui:includes": ["kind"],
      "ui:add": false
    },
    "ExampleId": {
      "ui:hidden": true
    }
  },
  "$schema": {
    "id": "Attachment",
    "properties": {
      "id": {
        "type": "integer",
        "primaryKey": true,
        "autoIncrement": true
      },
      "label": {
        "type": "string"
      }
    },
    "required": ["label"]
  }
}
