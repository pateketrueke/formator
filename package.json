{
  "name": "formator",
  "version": "0.0.0",
  "main": "index.js",
  "unpkg": "dist/bundle.js",
  "svelte": "src/lib/main.js",
  "browser": "dist/main.umd.js",
  "files": [
    "lib",
    "dist",
    "index.js"
  ],
  "scripts": {
    "dev": "tarima watch -p 3001",
    "dist": "tarima -mqe $NODE_ENV",
    "copy:ajv": "cp node_modules/ajv/dist/ajv.min.js dist/ajv.js",
    "copy:shimport": "cp node_modules/shimport/index.js dist/shimport.js",
    "build": "npm run dist && concat dist/ajv.js dist/shimport.js -o dist/bundle.js",
    "postdist": "npm run copy:ajv && npm run copy:shimport",
    "prepublishOnly": "npm test && npm run build",
    "lint": "eslint lib src e2e",
    "test": "npm run lint && npm run test:e2e",
    "test:e2e": "BASE_URL=http://localhost:3001 testcafe",
    "test:e2e:ci": "npm run test:e2e -- --ports 9505,9506 remote:1"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "output": ".",
    "serve": [
      "dist"
    ],
    "rename": [
      "**/lib/**:dist/{fullpath/2}",
      "**/spec/**:public/{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/shared/**",
      "!**/components/**"
    ],
    "bundle": [
      "**/main*.js"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less",
        "yml": "json",
        "umd": false
      },
      "rollup": {
        "inlineDynamicImports": true,
        "format": "es",
        "plugins": [
          "rollup-plugin-node-resolve",
          "rollup-plugin-commonjs",
          "rollup-plugin-svelte"
        ]
      },
      "buble": {
        "objectAssign": "Object.assign"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "peerDependencies": {
    "svelte": "3.x"
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "concat": "^1.0.3",
    "csso": "^3.5.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-pug": "^1.1.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-utils": ">=1.4.1",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.3",
    "rollup": "^1.25.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-svelte": "^5.0.3",
    "shimport": "0.0.16",
    "somedom": "^0.1.2",
    "svelte": "^3.4.4",
    "svql": "0.0.15",
    "tarima": "^4.6.0",
    "terser": "^3.17.0",
    "testcafe": "^1.5.0"
  }
}
