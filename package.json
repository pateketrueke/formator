{
  "name": "formator",
  "version": "0.0.10",
  "main": "index.js",
  "unpkg": "dist/bundle.js",
  "svelte": "src/lib/main.js",
  "files": [
    "src/lib/**",
    "lib/**",
    "dist/*",
    "index.js"
  ],
  "scripts": {
    "dev": "tarima watch -p ${PORT:-3001} -P \"/db,/tmp -> :${API_PORT:-8080}\"",
    "dist": "tarima -qe $NODE_ENV",
    "watch": "nodemon -i src -i dist -i public e2e/server.js",
    "copy:ajv": "cp node_modules/ajv/dist/ajv.bundle.js dist/ajv.js",
    "concat:bundle": "concat dist/ajv.js dist/main.umd.js -o dist/bundle.js",
    "postdist": "npm run copy:ajv && npm run concat:bundle",
    "prepublishOnly": "npm run dist",
    "lint": "eslint --ext js,svelte lib src e2e",
    "test": "npm run lint && npm run test:e2e --",
    "test:e2e": "BASE_URL=http://localhost:${PORT:-3001} testcafe ${BROWSER:-chrome:headless}"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "output": ".",
    "serve": "dist",
    "rename": [
      "**/lib/**:dist/{fullpath/2}",
      "**/spec/**:public/{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/shared/**",
      "!**/components/**"
    ],
    "bundle": [
      "**/main*.js"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "bundleOptions": {
      "rollup": {
        "format": "es",
        "plugins": [
          "rollup-plugin-svelte",
          "rollup-plugin-commonjs",
          "rollup-plugin-node-resolve"
        ]
      },
      "buble": {
        "objectAssign": "Object.assign"
      },
      "bundleCache": true,
      "entryCache": false,
      "extensions": {
        "js": "es6",
        "css": "less",
        "yml": "json",
        "test": false,
        "umd": false
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "acorn": ">=6.4.1",
    "body-parser": "^1.19.0",
    "buble": "^0.19.3",
    "concat": "^1.0.3",
    "csso": "^4.0.1",
    "dot-prop": ">=4.2.1",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-pug": "^1.1.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-utils": "^2.0.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "json-schema-sequelizer": "^0.22.0",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "lodash": ">=4.17.21",
    "minimist": ">=1.2.3",
    "nodemon": "^2.0.2",
    "pug": "^3.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "set-value": ">=2.0.1",
    "somedom": "^0.2.9",
    "sqlite3": "^4.1.0",
    "svelte": "^3.18.2",
    "svql": "0.0.27",
    "tarima": "^4.9.7",
    "terser": "^4.2.1",
    "testcafe": "^1.5.0"
  },
  "peerDependencies": {
    "json-schema-sequelizer": "*"
  }
}
