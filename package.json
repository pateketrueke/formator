{
  "name": "jsonschema-form-mw",
  "version": "0.1.1",
  "files": [
    "index.js",
    "dist"
  ],
  "scripts": {
    "dev": "tarima watch -dp 3001",
    "dist": "tarima -fqe production",
    "lint": "eslint src test",
    "test": "npm run lint",
    "test-e2e": "BASE_URL=http://localhost:3001 testcafe",
    "test-e2e-ci": "npm run test-e2e -- --ports 9505,9506 remote:1"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "output": ".",
    "rename": [
      "**/lib/**:dist/{fullpath/2}",
      "**/spec/**:public/{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/main.js",
      "**/resource.jsx"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "pluginOptions": {
      "tarima-lr": {
        "serve": "dist"
      }
    },
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less",
        "yml": "json"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "less": "^2.7.3",
    "less-plugin-autoprefix": "^1.5.1",
    "pug": "^2.0.3",
    "rollup": "^0.57.1",
    "tarima": "^4.0.7",
    "tarima-lr": "^0.4.1",
    "testcafe": "^0.19.1"
  },
  "dependencies": {
    "tiny-glob": "^0.2.1"
  }
}
