{
  "name": "json-schema-formalizer",
  "version": "0.0.0",
  "main": "lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "tarima watch -p 3001",
    "dist": "tarima -fqe production",
    "lint": "eslint src test",
    "test": "npm run lint",
    "test:e2e": "BASE_URL=http://localhost:3001 testcafe",
    "test:e2e:ci": "npm run test:e2e -- --ports 9505,9506 remote:1"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "output": ".",
    "rename": [
      "**/lib/**:dist/{fullpath/2}",
      "**/spec/**:public/{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/shared/**",
      "!**/components/**"
    ],
    "bundle": [
      "**/main.js"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "pluginOptions": {
      "tarima-lr": {
        "serve": "dist"
      }
    },
    "bundleOptions": {
      "rollup": {
        "format": "esm"
      },
      "extensions": {
        "js": "es6",
        "css": "less",
        "yml": "json"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.10.0",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.3",
    "rollup": "^0.66.0",
    "shimport": "0.0.11",
    "svelte": "^2.9.11",
    "tarima": "^4.2.2",
    "tarima-lr": "^0.4.3",
    "testcafe": "^0.23.0"
  }
}
