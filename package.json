{
  "name": "formator",
  "version": "0.0.0",
  "main": "index.js",
  "module": "dist/main.js.js",
  "browser": "dist/main.umd.js",
  "svelte": "src/lib/main.js",
  "files": [
    "src/**",
    "lib/**",
    "dist/*",
    "index.js"
  ],
  "scripts": {
    "dev": "tarima watch -p 3001 -P '/db -> 8080'",
    "dist": "tarima -mqe $NODE_ENV",
    "watch": "nodemon -i src -i dist -i public e2e/server.js",
    "copy:ajv": "cp node_modules/ajv/dist/ajv.min.js dist/ajv.js",
    "concat:bundle": "concat dist/ajv.js dist/main.umd.js -o dist/bundle.js",
    "postdist": "npm run copy:ajv && npm run concat:bundle",
    "prepublishOnly": "npm test && npm run build",
    "lint": "eslint --ext js,svelte lib src e2e *.js",
    "test": "npm run lint && npm run test:e2e --",
    "test:e2e": "BASE_URL=http://localhost:3001 testcafe ${BROWSER:-chrome:headless}"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "output": ".",
    "serve": "dist",
    "rename": [
      "**/lib/**:dist/{fullpath/2}",
      "**/spec/**:public/{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/shared/**",
      "!**/components/**"
    ],
    "bundle": [
      "**/main*.js"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "bundleOptions": {
      "rollup": {
        "format": "es",
        "plugins": [
          "rollup-plugin-node-resolve",
          "rollup-plugin-commonjs",
          "rollup-plugin-svelte"
        ]
      },
      "buble": {
        "objectAssign": "Object.assign"
      },
      "extensions": {
        "js": "es6",
        "css": "less",
        "yml": "json",
        "test": false,
        "umd": false
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "concat": "^1.0.3",
    "csso": "^4.0.1",
    "eslint": "^6.3.0",
    "lodash": ">=4.17.12",
    "set-value": ">=2.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-pug": "^1.1.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-utils": "^1.4.3",
    "express": "^4.17.1",
    "json-schema-sequelizer": "^0.20.5",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "nodemon": "^1.19.4",
    "pug": "^2.0.3",
    "rollup": "^1.25.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "somedom": "^0.1.2",
    "sqlite3": "^4.1.0",
    "svelte": "^3.5.1",
    "svql": "^0.0.15",
    "tarima": "^4.6.3",
    "terser": "^4.2.1",
    "testcafe": "^1.6.0"
  }
}
