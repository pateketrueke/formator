{
  "name": "formator",
  "version": "0.0.0",
  "main": "lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "tarima watch -p 3001",
    "dist": "tarima -mqe $NODE_ENV",
    "copy:pkg": "cp package-dev.json dist/package.json",
    "copy:ajv": "cp node_modules/ajv/dist/ajv.min.js dist/ajv.js",
    "copy:shimport": "cp node_modules/shimport/index.js dist/shimport.js",
    "postdist": "npm run copy:pkg && npm run copy:ajv && npm run copy:shimport",
    "lint": "eslint lib src tests",
    "test": "npm run lint",
    "test:e2e": "BASE_URL=http://localhost:3001 testcafe",
    "test:e2e:ci": "npm run test:e2e -- --ports 9505,9506 remote:1"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "tarima": {
    "from": "src",
    "output": ".",
    "rename": [
      "**/lib/**:dist/{fullpath/2}",
      "**/spec/**:public/{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/shared/**",
      "!**/components/**"
    ],
    "bundle": [
      "**/main.js"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "pluginOptions": {
      "tarima-lr": {
        "serve": "dist"
      }
    },
    "bundleOptions": {
      "rollup": {
        "_inlineDynamicImports": true,
        "format": "es",
        "plugins": [
          "rollup-plugin-node-resolve",
          "rollup-plugin-commonjs"
        ]
      },
      "extensions": {
        "js": "es6",
        "css": "less",
        "yml": "json"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "csso": "^3.5.1",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.10.0",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.3",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "shimport": "0.0.14",
    "somedom": "^0.1.2",
    "svelte": "^2.15.2",
    "tarima": "^4.4.0",
    "tarima-lr": "^0.4.3",
    "terser": "^3.17.0",
    "testcafe": "^1.0.1"
  }
}
